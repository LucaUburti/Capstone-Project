            android:layout_marginStart="16dp"
            android:hint="@string/long_acting_insulin_hint"
            android:inputType="text"
            android:textSize="@dimen/headline_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/my_therapy_long_acting_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/my_therapy_long_acting_tv" />

        <TextView
