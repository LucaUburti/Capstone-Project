            android:layout_marginStart="16dp"
            android:ems="3"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="@dimen/headline_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/my_therapy_lunch_rapid_tv"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/my_therapy_lunch_rapid_tv" />

        <TextView
            android:labelFor="@id/my_therapy_dinner_rapid_et"
            android:id="@+id/my_therapy_dinner_rapid_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/dinner"
            android:textAlignment="textEnd"
            android:textSize="@dimen/headline_size"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_therapy_lunch_rapid_tv" />

        <EditText
            android:id="@+id/my_therapy_dinner_rapid_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
